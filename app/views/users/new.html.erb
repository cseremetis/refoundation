<%if logged_in?%>
<div class="wrapper">
	<%=render "shared/adminMenu"%>
	<div class="row">
		<div class="col-lg-6">
			<h1 class="title text-center">Add Administrator:</h1>
			<%=form_for :user, url: users_path do |f|%>
				<%=render 'shared/errorMessages'%>
				<%=f.label :Name%>
				<%=f.text_field :name, class: 'form-control'%>
				<%=f.label :Email%>
				<%=f.email_field :email, class: 'form-control'%>
				<%=f.label :Password%>
				<%=f.password_field :password, class: 'form-control'%>
				<%=f.label 'Confirm Password'%>
				<%=f.password_field :password_confirmation, class: 'form-control'%>
				<br>
				<%=f.submit 'Add Administrator', class: 'btn btn-default'%>
			<%end%>
		</div>
		<div class="col-lg-6">
			<h1 class="title text-center">Current Administrators:</h1>
			<%@users.each do |u|%>
				<br>
				<h3 style="text-align: right;"><%=u.name%> <%=link_to 'remove', user_path(u), method: 'delete', data: {confirm: "are you sure?"}%></h3>
			<%end%>
		</div>
	</div>
</div>
<%else%>
	<%=render 'shared/login'%>
<%end%>